#!/usr/bin/env python3

import sys
import os

# Add the src directory to sys.path
SRC_DIR = os.path.expanduser("~/.local/share/wallpaper-picker/src")
if SRC_DIR not in sys.path:
    sys.path.insert(0, SRC_DIR)

try:
    from main import main
except ImportError as e:
    print(f"Error: Could not import wallpaper-picker modules from {SRC_DIR}")
    print(f"Details: {e}")
    sys.exit(1)

if __name__ == "__main__":
    main()
