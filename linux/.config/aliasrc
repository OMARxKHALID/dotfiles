# Shared aliases

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Listing
if command -v eza &> /dev/null; then
    alias ls='eza --color=always --icons=always --group-directories-first'
    alias ll='eza -alF --color=always --icons=always --group-directories-first'
    alias la='eza -A --color=always --icons=always --group-directories-first'
    alias l='eza -CF --color=always --icons=always --group-directories-first'
else
    alias ls='ls --color=auto'
    alias ll='ls -alF --color=auto'
    alias la='ls -A --color=auto'
    alias l='ls -CF --color=auto'
fi

# Grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Shortcuts
alias c='clear'
alias cls='clear'
alias h='history'
alias nf='neofetch'

# Cleanup
alias rem='rm -rI'

# Wipe shell history
function clear-history {
    local state="${XDG_STATE_HOME:-$HOME/.local/state}"
    clear && echo "Wiping history..."
    rm -f ~/.bash_history ~/.zsh_history \
          "$state/bash/history" "$state/zsh/history"
    [ -n "$ZSH_VERSION" ] && fc -p || history -c
    echo "Done."
}

# Bat (Alternative cat)
if command -v batcat &> /dev/null; then
    alias bat='batcat'
    alias cat='batcat'
    alias catp='batcat -p'
elif command -v bat &> /dev/null; then
    alias bat='bat'
    alias cat='bat'
    alias catp='bat -p'
fi

# Safety
alias rm='rm -I'
alias cp='cp -i'
alias mv='mv -i'

# Gnome terminal colors
alias stc='dconf dump /org/gnome/terminal/legacy/profiles:/:b1dcc9dd-5262-4d8d-a863-c897e6d979b9/ > "$XDG_CONFIG_HOME/terminal/tcs-gruvbox.dconf"'
alias ltc='dconf load /org/gnome/terminal/legacy/profiles:/:b1dcc9dd-5262-4d8d-a863-c897e6d979b9/ < "$XDG_CONFIG_HOME/terminal/tcs-gruvbox.dconf"'
alias etc='${EDITOR:-nano} "$XDG_CONFIG_HOME/terminal/tcs-gruvbox.dconf"'

# Kitty
alias kittyconf='${EDITOR:-nano} "$XDG_CONFIG_HOME/kitty/kitty.conf"'
alias reloadkitty='kill -SIGUSR1 $KITTY_PID'
alias img='kitty +kitten icat'

# Package management
alias s='apt search'
alias i='sudo apt install'
alias u='sudo apt update && sudo apt upgrade -y'
alias r='sudo apt remove --purge'
alias ar='sudo apt autoremove'

# Git shortcuts
alias g='git'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gl='git pull'
alias gst='git status'
alias gd='git diff'

# System utilities
alias df='df -h'     # Human-readable disk usage
alias free='free -m' # Memory in MB
alias ports='netstat -tulanp'
alias myip='curl -s https://ifconfig.me && echo'
